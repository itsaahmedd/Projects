<title>Color Calendar for Appointments</title>
<link rel="stylesheet" href="~/css/theme-basic.css">
<link rel="stylesheet" href="~/css/theme-glass.css">



<div class="text-center">
    <h1 class="animated-header_1">Appointments</h1>
</div>



<div style="display: flex; flex-direction: column; ">

    <div class="image-container_1">
        <img src="~/images/image_3.jpg" alt="Image 1" class="img-fluid" style="width: 400px; height: 500px;">
        <img src="~/images/image_4.jpg" alt="Image 2" class="img-fluid" style="width: 400px; height: 500px;">
        <img src="~/images/image_5.jpg" alt="Image 3" class="img-fluid" style="width: 400px; height: 500px;">

    </div>



    <div class="Appointment" style="align-self:center;">
        <label for="governate">Select a Location:</label>
        <select name='governate' id="governate" onchange="displayCalander()" style="width:100%">

            <option value="hawally">Hawally</option>
            <option value="ahmadi">Ahmadi</option>
            <option value="city">Kuwait City</option>

        </select>

        <hr>

        <div class="calanders"></div>

        <div id="calendar-a" style="display: block;"></div>
        <div id="calendar-b" style="display: none;"></div>
        <div id="calendar-c" style="display: none;"></div>

        <div style="display: flex; justify-content: center;">

            <button class="btn" onclick="booker()">Submit</button>
            <button class="btn" onclick="cancel_appointment()">Cancel</button>

        </div>

    </div>

    <div id="customer_selector">

        <input type="hidden" id="username" value="@User.Identity.Name" />

    </div>

    <script src="~/js/bundle.js"></script>
    <script src="~/js/calendaro.js"></script>
    <table>
        <thead>
            <tr>
                <th>Username</th>
                <th>Appointment</th>

            </tr>
        </thead>
        <tbody>
            <script>table_maker()</script>


        </tbody>
    </table>
</div>



